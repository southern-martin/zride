# Environment Variables for ZRide Application
# Copy this file to .env and update with your actual values

# Application Environment
ENV=development
DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zride
DB_USER=zride_user
DB_PASSWORD=zride_password
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration (Optional)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=zride_logs
MONGODB_USER=admin
MONGODB_PASSWORD=admin_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=24h

# Zalo Integration
ZALO_APP_ID=your_zalo_app_id_here
ZALO_APP_SECRET=your_zalo_app_secret_here
ZALO_OA_ID=your_zalo_oa_id_here
ZALO_OA_SECRET=your_zalo_oa_secret_here

# ZaloPay Integration
ZALOPAY_APP_ID=your_zalopay_app_id
ZALOPAY_KEY1=your_zalopay_key1
ZALOPAY_KEY2=your_zalopay_key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Service URLs (for local development)
API_GATEWAY_URL=http://localhost:8080
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
TRIP_SERVICE_URL=http://localhost:8003
MATCHING_SERVICE_URL=http://localhost:8004
PAYMENT_SERVICE_URL=http://localhost:8005

# Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
TRIP_SERVICE_PORT=8003
MATCHING_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://zalo.me
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# AI/ML Configuration
ML_MODEL_PATH=./models/
MATCHING_ALGORITHM=cosine_similarity
MATCHING_THRESHOLD=0.7

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
FIREBASE_SERVER_KEY=your_firebase_server_key

# Security Configuration
BCRYPT_COST=12
SESSION_TIMEOUT=30m
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# External APIs
WEATHER_API_KEY=your_weather_api_key
SMS_API_KEY=your_sms_api_key
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s

# Development Settings
ENABLE_DEBUG_MODE=true
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false